mixin responsiveNavIconStdV1
	span.fa.fa-align-justify.fa-lg.specialNavMenu Menu

mixin responsiveNavIconCSSV1
	//- This is the version for the CSS nav opening of the sub menu
	label(for='toggle')
		span.fa.fa-align-justify.fa-lg.specialNavMenu Menu

mixin navMenuToggleV1
	input(name='toggle',type='checkbox',checked='checked')#toggle

mixin responsiveNavMenuV1
	ul.mainNavBar
		li
			+responsiveNavIconStdV1
			//- +responsiveNavIconCSSV1
			//- +navMenuToggleV1
			ul.responsiveNavList.flex-container
				li
					a(href="#") Home
				li
					a(href="#") Download
				li
					a(href="#") Online Shop
				li
					a(href="#") Top 10
				li
					a(href="#") Business
